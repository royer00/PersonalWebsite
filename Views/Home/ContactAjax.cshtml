@model PersonalSite.MVC.UI.Models.ContactViewModel


@using (Html.BeginForm("", "", FormMethod.Post, new { id = "ContactCreateForm" }))
{
    @Html.AntiForgeryToken()

    <section class="resume-section">
        <div class="resume-section-content">
            <div id="contact" class="form-horizontal offset-1 col-md-8  mt-3 mb-3">
                <h2 id="contact-header" class="offset-4 col-md-6">Contact Me!</h2>
                <h4 class="text-center">Contact me with any questions, employment opportunities, or to make a new friend!</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control offset-2", placeholder = "Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control offset-2", placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control offset-2", placeholder = "Subject" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control offset-2", placeholder = "Message" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div id="contact-btn" class="col-md-offset-1 col-md-10">
                        <input type="submit" value="Hit Me Up!" class="btn btn-dark offset-2" />
                    </div>
                </div>
            </div>
        </div>
    </section>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
   
}
